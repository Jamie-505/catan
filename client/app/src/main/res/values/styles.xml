<resources>
  <style name="CatanAppTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="fontFamily">@font/circularstd_medium</item>
  </style>
  <style name="RoundedButton" parent="@style/Widget.AppCompat.Button.Colored">
    <item name="android:background">@drawable/button_pill</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:capitalize">none</item>
    <item name="android:textAllCaps">false</item>
  </style>
  <style name="RoundedButtonTransparent" parent="@style/Widget.AppCompat.Button.Colored">
    <item name="android:background">@drawable/button_pill_transparent</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:capitalize">none</item>
    <item name="android:textAllCaps">false</item>
  </style>
  <style name="RoundBornerImageButton" parent="@style/Widget.AppCompat.ImageButton">
    <item name="android:background">@drawable/imgbutton_pill</item>
    <item name="android:paddingRight">25dp</item>
    <item name="android:paddingTop">32dp</item>
    <item name="android:paddingBottom">1dp</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:capitalize">none</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:scaleType">fitEnd</item>
    <item name="android:elevation">2dp</item>
  </style>
  <style name="RoundBorderImageButton2" parent="@style/Widget.AppCompat.ImageButton">
    <item name="android:background">@drawable/button_pill_transparent</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:capitalize">none</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:padding">10dp</item>
    <item name="android:elevation">2dp</item>
  </style>
  <style name="RoundedForm" parent="@style/Widget.AppCompat.EditText">
    <item name="android:background">@drawable/rounded_textedit</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textSize">24sp</item>
    <item name="android:keyTextSize">24sp</item>
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:capitalize">none</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:elevation">2dp</item>
  </style>

    <style name="TitleTextStyle" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="CatTitleText1" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
    <item name="android:textColor">#FFF</item>
    <item name="android:textSize">72sp</item>
    <item name="fontFamily">@font/circularstd_medium</item>
    <item name="android:opacity">opaque</item>
  </style>
  <style name="CatTitleText2" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
    <item name="android:textColor">#FFF</item>
    <item name="android:textSize">34dp</item>
    <item name="fontFamily">@font/circularstd_bold</item>
    <item name="android:opacity">opaque</item>
  </style>


    <style name="CatTitleText3" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
    <item name="android:textColor">#FFF</item>
    <item name="android:textSize">30sp</item>
    <item name="fontFamily">@font/circularstd_bold</item>
    <item name="android:opacity">opaque</item>
  </style>

  <declare-styleable name="CircleImageView">
    <attr name="border_width" format="dimension" />
    <attr name="border_color" format="color" />
  </declare-styleable>


</resources>
