<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/selectTargetBox"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginBottom="8dp"
  android:layout_marginStart="8dp"
  android:layout_marginEnd="8dp"
  app:cardCornerRadius="8dp"
  app:cardElevation="8dp"
  app:cardUseCompatPadding="true"
  app:contentPadding="8dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/select_robber_target"
          android:textAlignment="center"
          android:textAppearance="@style/CatTitleText3" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
          android:id="@+id/p0"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingStart="4dp"
          android:paddingEnd="4dp"
          android:gravity="center"
          android:orientation="vertical">
          <TextView
            android:id="@+id/p0Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

          <ImageButton
              android:id="@+id/p0Status"
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:background="@drawable/button_pill"
              android:src="@drawable/ic_hourglass" />
        </LinearLayout>

        <LinearLayout
          android:id="@+id/p1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:visibility="gone"
          android:paddingStart="4dp"
          android:paddingEnd="4dp"
          android:gravity="center"
          android:orientation="vertical">
          <TextView
            android:id="@+id/p1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
          <ImageButton
            android:id="@+id/p1Status"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_hourglass"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/p2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:visibility="gone"
          android:paddingStart="4dp"
          android:paddingEnd="4dp"
          android:gravity="center"
          android:orientation="vertical">
          <TextView
            android:id="@+id/p2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
          <ImageButton
            android:id="@+id/p2Status"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_hourglass"/>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
